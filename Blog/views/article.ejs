<%- include("partials/header.ejs") %>

<div class="container">
	<div class="jumbotron jumbotron-fluid mb-3 pl-0 pt-0 pb-0 bg-white position-relative">
		<div class="h-100 tofront">
			<div class="row justify-content-between">
				<div class="col-12 pt-6 pb-6 pr-6">
					<h1 class="display-4 secondfont mb-5 font-weight-bold"><%= post.title %>
					</h1>
					<form class="invisible float-right edit-tool ml-2" action="/delete" method="POST">
						<input type="hidden" name="id" value="<%= post.id %>">
						<button class="grey-btn" type="submit"><i class="fa-solid fa-trash small"></i></button>                            
					</form>
					<form class="invisible float-right edit-tool ml-2" action="/edit/<%= post.id %>" method="GET">
						<input type="hidden" name="id" value="<%= post.id %>">
						<button class="grey-btn" type="submit"><i class="fa-regular fa-pen-to-square small"></i></button>                            
					</form>
					<div class="d-flex justify-content-center">
						<small class="ml-2 text-center"><%= post.auther %> <span class="text-muted d-block"><%= post.month %> <%= post.day %> &middot; <%= post.year %></span>
						</small>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Header -->
    
<!--------------------------------------
MAIN
--------------------------------------->
<div class="container pt-4 pb-4">
	<div class="row justify-content-center">
		<div class="col-10">
			<article class="article-post">
			<p>	<%= post.text %>		</p>
			</article>
		</div>
	</div>
</div>



<%# read next %>

<div class="container pt-4 pb-4">
	<h5 class="font-weight-bold spanborder"><span>Read next</span></h5>
	<div class="row">
		<div class="col-lg-6">
			<div class="card border-0 mb-4 box-shadow h-xl-300">
				<div class="px-0 pb-0 d-flex flex-column align-items-start">
					<h2 class="h4 font-weight-bold">
					<a class="text-dark" href="/article/<%= nextPosts[0].id %>"><%= nextPosts[0].title %></a>
					</h2>
					<p class="card-text">
						<%= nextPosts[0].text %>
					</p>
					<div>
						<small class="d-block"><a class="text-muted"><%= nextPosts[0].auther %></a></small>
						<small class="text-muted"><%= nextPosts[0].month %> <%= nextPosts[0].day %> &middot;<%= nextPosts[0].year %></small>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-6">
			<div class="flex-md-row mb-4 box-shadow h-xl-300">

				<% for (i=1; i<4; i++){ %>
					<div class="mb-3 d-flex align-items-center">
						<div class="pl-3">
							<h2 class="mb-2 h6 font-weight-bold">
							<a class="text-dark" href="/article/<%= nextPosts[i].id %>"><%= nextPosts[i].title %></a>
							</h2>
							<div class="card-text text-muted small">
								<%= nextPosts[i].auther %>
							</div>
							<small class="text-muted"><%= nextPosts[i].month %> <%= nextPosts[i].day %> &middot;<%= nextPosts[i].year %></small>
						</div>
					</div>

				<% } %>			
			</div>
		</div>
	</div>
</div>

<%- include("partials/footer.ejs") %>